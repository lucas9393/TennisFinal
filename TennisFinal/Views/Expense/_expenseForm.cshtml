@model TennisFinal.Models.Prenotation


<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.css" rel="stylesheet">

<div>
    <div class="row">
        <div class="col-md-8">
            <form id="expenseForm">
                <input type="hidden" asp-for="Id_Prenotazione" />
                
                <div class="form-group">
                    <label asp-for="Campo" class="control-label"></label>
                    <select asp-for="Campo" class="form-control">
                        <option value="">-- Seleziona campo --</option>
                        <option value="TerraBattuta">Terra battuta</option>
                        <option value="Cemento">Cemento</option>
                        <option value="Sintetico">Sintetico</option>
                        <option value="Erba">Erba</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Partita" class="control-label"></label>
                    <select asp-for="Partita" class="form-control">
                        <option value="">-- Seleziona Partita --</option>
                        <option value="Singola">Singola</option>
                        <option value="Doppia">Doppia</option>
                    </select>
                </div>


                <div class="form-group" id="calender-container">
                    <label asp-for="Data" class="control-label"></label>
                    <span asp-validation-for="Data"></span>
                    @Html.EditorFor(model => model.Data)
                </div>

                <div class="form-group">
                    <button type="button" id="btnSubmit" class="btn btn-block btn-info">Salva</button>
                </div>
            </form>
        </div>
    </div>
</div>